<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_main_start_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_start_service"
            android:backgroundTint="@color/colorPositive"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>

        <Button
            android:id="@+id/btn_main_stop_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_stop_service"
            android:backgroundTint="@color/colorNegative"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>

    </LinearLayout>

</LinearLayout>
